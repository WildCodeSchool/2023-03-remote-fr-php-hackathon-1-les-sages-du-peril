{% extends 'layout.html.twig' %}

{% block title %}Osez Voyager
{% endblock %}

{% block meta_description %}
	Voyages
{% endblock %}

{% block content %}
<div class="header-amerique">
	{% include 'Include/_navbar.html.twig' %}
    </div>

	<h1 class="title-amerique">Les périls d’Amérique</h1>
	{% set backgroundImages = [
        '/assets/Background/mort.png',
        '/assets/Background/ile.png',
        '/path/to/image3.jpg',
        '/path/to/image4.jpg'
    ] %}
	<section class="ameriques-container">
		{% for amerique in ameriques %}
			<article id="article-{{ loop.index }}" style="background-image: url('{{ backgroundImages[(loop.index - 1) % backgroundImages|length] }}')">
				<h2>{{ amerique.title }}</h2>
				<div class="content-container">
					<div class="text-content">
						<h3>Pays :
							{{ amerique.country }}</h3>
						<p>{{ amerique.content|raw }}</p>
						<p>Danger :
							{{ amerique.danger }}</p>
					</div>
				</div>
			</article>
		{% endfor %}
	</section>
	<div class="button">
	<a href="#" class="bouton-haut"><img src="/assets/images/up.png" alt=""></a>
</div>
{% endblock %}
