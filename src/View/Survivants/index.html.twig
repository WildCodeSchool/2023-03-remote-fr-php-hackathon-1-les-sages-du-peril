{% extends 'layout.html.twig' %}
{% block content %}
<div class="header">
		<img class="img-survivant" src="assets/images/survivant.jpg" alt="survivor">
	<h1 class="survivant-title">Les survivants</h1>
    </div>
	<section class="survivant-container">
		{% for survivant in survivants %}
			<article>
				<img src="assets/images/{{survivant.image}}" alt="Photo">
				<div class="survivant-content">
					<h2>{{ survivant.name }}</h2>
					<p>
						{{ survivant.content }}
					</p>
				</div>
			</article>
		{% endfor %}
	</section>
{% endblock %}
